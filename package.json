{
  "name": "b_automation_project",
  "version": "1.0.0",
  "description": "Professional Playwright Automation with TypeScript - Demo Web Shop",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:chrome": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:debug": "playwright test --debug",
    "test:report": "playwright test --reporter=html",
    "show-report": "playwright show-report reports/html-reports",
    "lint": "eslint . --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "playwright",
    "typescript",
    "automation",
    "testing",
    "e2e"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@types/node": "^20.19.30",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "dotenv": "^16.6.1"
  }
}
